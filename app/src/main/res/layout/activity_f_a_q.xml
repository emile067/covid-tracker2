<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.FAQActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:srcCompat="@drawable/virus_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="323dp"
                android:layout_height="35dp"
                android:text="Staying home can save lives."
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/mostCommonTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Most common symptoms"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/MostCommonSymptomslistView"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:divider="@null"
            android:dividerHeight="0dp" />
        <TextView
            android:id="@+id/lessCommonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Less common symptoms"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/lessCommonSymptomslistView"
            android:layout_width="match_parent"
            android:layout_height="387dp"
            android:divider="@null"
            android:dividerHeight="0dp" />
        <TextView
            android:id="@+id/seriousSymptomsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serious symptoms"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/seriousSymptomslistView"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:divider="@null"
            android:dividerHeight="0dp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/sanitizer" />

            <TextView
                android:id="@+id/imageTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay CLean."
                android:textColor="@color/white"
                android:textSize="50sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/preventionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Protect yourself and others around you by knowing the facts and taking appropriate precautions." />

        <ListView
            android:id="@+id/preventionListView"
            android:layout_width="match_parent"
            android:layout_height="406dp"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </LinearLayout>
</ScrollView>